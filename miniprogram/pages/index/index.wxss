/* 头部logo */
.header{
  width: 100%;
  height: 90rpx;
  background-color: white;
}
.hdCon{
  display: flex;
  height: 100%;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 26rpx;
}
.hdCon navigator{
  height: 50rpx;
}
.hdCon image{
  height: 100%;
  width: 200rpx;
  padding: 25rpx 0 0;
}

/* 轮播图 */
.banner{
  width: 100%;
  height: 295rpx;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
  height: 295rpx;
}

/* 功能图标 */
.majorCon{
  display: flex;
  padding: 20rpx 0 0;
}
.majorCon1{
  display: flex;
  padding: 0 0;
}
.major .box{
  text-align: center;
  padding: 0 41rpx;
  background-color: white;
}
.major .pic{
  width: 108rpx;
  height: 108rpx;
}
.major .txt{
  font-size: 26rpx;
}

/* 今日课表模板 */
.works{
  background: #f0f3f8;
  padding: 30rpx 0 30rpx;
}
.pubTitle{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 26rpx 0;
}
.pubTitle .txt{
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 20rpx;
}
.pubTitle .txt::before{
  display: block;
  width: 8rpx;
  height: 34rpx;
  background: #c8020b;
  content: "";
  position: absolute;
  left: 0;
  margin-top: 15rpx;
}
.pubTitle .more{
  font-size: 34rpx;
  color: #666;
}


