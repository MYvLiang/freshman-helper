.top-view{
  display: flex;
  width: 100%;
  height: 100rpx;
  z-index: 100;
  position:fixed;
  top:0px;
  background-color: #fff;
  border-bottom-style:solid; 
  border-bottom-width:1rpx;
  border-bottom-color: #dfe4ea;
}

.top-set{
  margin: auto;
  flex: 2;
}

.set-image{
  height:36rpx;
  width:48rpx;
  margin-top: 10rpx;
  margin-left: 16rpx;
}

.top-week{
  margin: auto;
  flex: 3;
  font-size: 34rpx;
  text-align: center;
}

.course{
  margin-top: 106rpx;
  display: flex;
  width: 100%;
  height: 1680rpx;
  /* background-color: #fff; */
}

.course-time-container{
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f1f2f6;
}

.course-time-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom-style:dotted; 
  border-bottom-width:1rpx;
  border-bottom-color: #9fa0a1;
}

.time-num{
  font-size: 28rpx;
  text-align: center;
}

.time{
  font-size: 22rpx;
  text-align: center;
}

.course-body{
  flex: 21;
  background-color: #fff;
  display: flex;
}

.course-day{
  flex: 1;
  width: 0;
  position:relative;
  margin-left: 4rpx;
  margin-right: 3rpx;
  display: flex;
  flex-direction: column;
}
.course-grid{
  flex: 1;
  border-bottom-style:dotted; 
  border-bottom-width:1rpx;
  border-bottom-color: #d6dde6;
}

.course-day-item{
  position:absolute; 
  margin-top: 5rpx;
  border-radius: 10rpx; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.course-text{
  text-overflow: ellipsis;
  display: -webkit-box;
  overflow:hidden;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-align: center;
  color: #fff;
  padding: 5rpx 5rpx;
  font-size: 24rpx;
}

.course-name{
  -webkit-line-clamp: 3; 
}
.classroom{
  -webkit-line-clamp: 2; 
}
.week-num{
  -webkit-line-clamp: 1; 
}

.course-details-dialog{
  position:fixed;
  z-index: 3000;
  background-color: #000;
  opacity: 0.5;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.dialog-hide{
  display: none;
}

.course-details{
  position:fixed;
  top: 400rpx;
  left: 170rpx;
  z-index: 4000;
  background-color: #fff;
  box-shadow: 10rpx 0rpx 20rpx 2rpx #777;
  border-radius: 16rpx;
  height: 500rpx;
  width: 400rpx;
}

.course-details-name{
  font-size: 44rpx;
  text-align: center;
  margin: 20rpx 20rpx 50rpx 20rpx;
  word-break: break-all;
}
.course-details-other{
  font-size: 30rpx;
  margin:5rpx 40rpx;
  word-break: break-all;
}